@import url("https://fonts.googleapis.com/css?family=Noto+Sans:400,700,400italic,700italic");

.basic {
	font-family: 'Noto Sans', sans-serif;
	font-size: 14px;

	button {
		margin: 0.2em;
		vertical-align: middle;
		border: solid 1px #9e9e9e;
		border-radius: 3px;
		padding: 6px;
		line-height: 20px;
		cursor: pointer;
		transition: all 0.05s;
		background: #fff;
		font-size: 13px;

		&:hover {
			transition: all 0.01s;
			background: #f2f2f2;
			border-color: #d9d9d9;
		}

		&:disabled {
			cursor: default;
			color: #9e9e9e;
			background-color: #f5f5f5;
			border-color: #e3e3e3;
		}
	}

	input[type=text] {
		margin: 0.25em 0;
		background: #fff;
		border: 1px solid #9e9e9e;
		border-radius: 3px;
		padding: 4px;
		line-height: 20px;
		font-size: 13px;
		transition: all 0.05s;

		&:disabled {
			color: #9e9e9e;
			background-color: #f5f5f5;
			border-color: #e3e3e3;
		}
	}

	dojo-list {
		margin: 0.25em 0;
		display: block;
		transition: all 0.05s;

		ul {
			border: 1px solid #9e9e9e;
			border-radius: 3px;
			padding: 4px;
		}

		li {
			list-style: none;
		}
	}
}
